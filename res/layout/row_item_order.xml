    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:background="@color/menu_main_gray_light_divider"
        android:visibility="gone" />

    <LinearLayout
